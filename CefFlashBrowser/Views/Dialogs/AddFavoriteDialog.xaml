<Window x:Class="CefFlashBrowser.Views.Dialogs.AddFavoriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cc="clr-namespace:CefFlashBrowser.Views.CustomControls"
        xmlns:local="clr-namespace:CefFlashBrowser.Views.Dialogs"
        mc:Ignorable="d"
        
        Title="{DynamicResource title_addFavorite}"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="AddFavoritesDialogTextBoxStyle"
               TargetType="TextBox"
               BasedOn="{StaticResource TextBoxBaseStyle}">
            <Setter Property="Width"
                    Value="300"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="15">
        <TextBlock Text="{DynamicResource favorites_name}"/>
        <cc:AutoSelectAllTextBox Style="{StaticResource AddFavoritesDialogTextBoxStyle}"/>

        <TextBlock Text="{DynamicResource favorites_url}"/>
        <cc:AutoSelectAllTextBox Style="{StaticResource AddFavoritesDialogTextBoxStyle}"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    MinWidth="70"
                    Content="{DynamicResource button_cancel}"/>

            <Button Grid.Column="2"
                    MinWidth="70"
                    Margin="10,0,0,0"
                    Content="{DynamicResource button_ok}"
                    Style="{StaticResource ButtonPrimary}"/>
        </Grid>
    </StackPanel>
</Window>
