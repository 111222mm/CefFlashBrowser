<UserControl x:Class="CefFlashBrowser.Views.SettingPanels.BrowserSettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CefFlashBrowser.ViewModels.SettingPanelViewModels"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:CefFlashBrowser.Views.SettingPanels"
             mc:Ignorable="d" >
    
    <UserControl.DataContext>
        <vm:BrowserSettingPanelViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>

            <!--Header-->
            <Thickness x:Key="HeaderMargin">0,15</Thickness>
            <FontWeight x:Key="HeaderFontWeight">Bold</FontWeight>
            <sys:Double x:Key="HeaderFontSize">18</sys:Double>

            <!--Setting Item-->
            <Thickness x:Key="SettingItemMargin">2,5</Thickness>

        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Hidden">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Browser Cache-->
            <TextBlock Grid.Row="0"
                       Text="{StaticResource settingHeader_browserData}"
                       Margin="{StaticResource HeaderMargin}"
                       FontSize="{StaticResource HeaderFontSize}"
                       FontWeight="{StaticResource HeaderFontWeight}"/>

            <!--Delete Caches-->
            <Grid Grid.Row="1"
                  Margin="{StaticResource SettingItemMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{StaticResource settingItem_deleteCache}"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="2"
                        Content="{StaticResource button_deleteCache}"
                        Command="{Binding DeleteCacheCommand}"/>
            </Grid>
        
        </Grid>
    </ScrollViewer>
</UserControl>
